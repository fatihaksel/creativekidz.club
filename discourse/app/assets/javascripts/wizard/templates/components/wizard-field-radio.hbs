{{#each field.choices as |c|}}
  <div class="radio-field-choice {{fieldClass}}">
    {{radio-button value=field.value
                   radioValue=c.id
                   label=c.label
                   extraLabel=c.extra_label
                   icon=c.icon
                   description=c.description
                   onChange=(action "changed")}}
  </div>
{{/each}}
