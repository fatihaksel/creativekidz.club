{{#if showTopicTimer}}
  <h3 class="topic-timer-heading">
    <span title={{title}}>
      {{clockIcon}} {{notice}}
    </span>
    {{#if showTrashCan}}
      <button type="button" class="btn topic-timer-remove no-text" title={{trashCanTitle}}>
        {{trashCanIcon}}
      </button>
    {{/if}}
  </h3>
{{/if}}
