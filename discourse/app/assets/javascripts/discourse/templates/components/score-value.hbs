{{#if value}}
  <span class="score-value">
    <span class="score-number">{{float value}}</span>
    {{#if label}}
      <span title={{i18n (concat "review.explain." label ".title")}} class="score-value-type">
        {{i18n (concat "review.explain." label ".name")}}
      </span>
    {{/if}}
  </span>
  <span class="op">+</span>
{{/if}}
