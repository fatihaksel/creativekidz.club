#!/bin/bash


DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd ../tmp && pwd )"

SOCKET="$DIR"/file_change.sock

if [[ -e "$SOCKET" ]]; then
  echo "$1 $2" | socat - UNIX-CONNECT:$SOCKET >/dev/null 2>/dev/null
  if [ $? != 0 ]; then
    rm $SOCKET
  fi
fi

# To enable:
#
# 1. Install socat
# 2. Add VIM_AUTOSPEC=1 to your environment
# 3. Add the following to your .vimrc
#

